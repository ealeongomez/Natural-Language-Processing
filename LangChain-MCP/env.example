# Configuración de APIs
# Obtén tu API key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu_openai_api_key_aqui

# API de Anthropic (opcional)
ANTHROPIC_API_KEY=tu_anthropic_api_key_aqui

# APIs para ejercicios avanzados (opcionales)
OPENWEATHER_API_KEY=tu_openweather_api_key_aqui
NEWS_API_KEY=tu_news_api_key_aqui

# Configuración de seguridad
MCP_SECRET_KEY=tu_clave_secreta_muy_segura_aqui
JWT_SECRET_KEY=tu_jwt_secret_key_aqui

# Configuración de base de datos
DATABASE_URL=sqlite:///./app.db

# Configuración de cache
REDIS_URL=redis://localhost:6379

# Configuración de desarrollo
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Configuración de rate limiting
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_PERIOD=3600

# Configuración de monitoreo
ENABLE_METRICS=True
METRICS_PORT=9090

# Configuración de archivos
LOG_FILE=./logs/app.log
DATA_DIR=./datos

# Configuración de servidor MCP
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000 